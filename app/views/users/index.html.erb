<%= form_tag(users_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search users" %>
  <%= submit_tag "Find friends", :name => nil %>
<% end %>
<% @users.each do |user| %>
  <%= user.name %>
  <%= link_to 'Follow', user_follows_path(user), method: :post %>
<% end %>